#include <iostream>
#include <cstdlib> // para rand() e srand()
#include <ctime>   // para time()
using namespace std;

int main() {

// 1. Leia a idade de uma pessoa e informe se ela é maior ou menor de idade.
    int idade;
    cout << "Digite sua idade: ";
    cin >> idade;

    if (idade >= 18)
        cout << "Maior de idade\n";
    else
        cout << "Menor de idade\n";

// 2. Exiba uma contagem regressiva de 10 até 1 usando while.
    int cont = 10;
    while (cont >= 1) {
        cout << cont << " ";
        cont--;
    }
    cout << endl;

// 3. Peça números até que o usuário digite 0. Mostre a soma total.
    int num, soma = 0;
    cout << "Digite numeros (0 para parar):\n";
    do {
        cin >> num;
        soma += num;
    } while (num != 0);
    cout << "Soma total: " << soma << endl;

// 4. Leia 10 números e mostre quantos deles são positivos.
    int positivos = 0;
    for (int i = 1; i <= 10; i++) {
        cout << "Digite o " << i << "º numero: ";
        cin >> num;
        if (num > 0)
            positivos++;
    }
    cout << "Quantidade de numeros positivos: " << positivos << endl;

// 5. Leia notas até que o usuário digite uma nota negativa. Exiba a média.
    float nota, somaNotas = 0;
    int qtdNotas = 0;

    cout << "Digite notas (negativa para sair):\n";
    while (true) {
        cin >> nota;
        if (nota < 0)
            break;
        somaNotas += nota;
        qtdNotas++;
    }

    if (qtdNotas > 0)
        cout << "Media das notas: " << somaNotas / qtdNotas << endl;
    else
        cout << "Nenhuma nota valida digitada.\n";

// 6. Mostre todos os números pares de 1 a 50 usando um laço for.
    cout << "Numeros pares de 1 a 50:\n";
    for (int i = 2; i <= 50; i += 2)
        cout << i << " ";
    cout << endl;

// 7. Jogo: adivinhe o número secreto entre 1 e 10.
    srand(time(0));
    int segredo = rand() % 10 + 1;
    int palpite;

    cout << "Tente adivinhar o numero secreto (1 a 10): ";
    do {
        cin >> palpite;
        if (palpite > segredo)
            cout << "Muito alto! Tente menor: ";
        else if (palpite < segredo)
            cout << "Muito baixo! Tente maior: ";
    } while (palpite != segredo);

    cout << "Parabens! Voce acertou!\n";

// 8. Calcule a soma de todos os números ímpares entre 1 e 100.
    int somaImpares = 0;
    for (int i = 1; i <= 100; i += 2)
        somaImpares += i;

    cout << "Soma dos impares de 1 a 100: " << somaImpares << endl;

    return 0;
}
