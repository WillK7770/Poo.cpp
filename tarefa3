#include <iostream>
#include <cstdlib> // para rand() e srand()
#include <ctime>   // para time()
using namespace std;

int main() {


// 1. Calcule a soma de todos os números ímpares entre 1 e 100.
    int soma = 0;
    for (int i = 1; i <= 100; i++) {
        if (i % 2 != 0)
            soma += i;
    }
    cout << "Soma dos numeros impares entre 1 e 100: " << soma << endl;


// 2. Jogo: o programa define um numero secreto entre 1 e 10 e o usuario deve adivinhar.
    srand(time(0)); // inicializa o gerador de numeros aleatorios
    int numeroSecreto = rand() % 10 + 1;
    int palpite;

    cout << "\nTente adivinhar o numero secreto (entre 1 e 10): ";
    do {
        cin >> palpite;

        if (palpite > numeroSecreto)
            cout << "Muito alto! Tente um numero menor: ";
        else if (palpite < numeroSecreto)
            cout << "Muito baixo! Tente um numero maior: ";
    } while (palpite != numeroSecreto);

    cout << "Parabens! Voce acertou o numero secreto!\n";


// 3. Mostre todos os números pares de 1 a 50 usando um laço for.
    cout << "\nNumeros pares de 1 a 50:\n";
    for (int i = 2; i <= 50; i += 2)
        cout << i << " ";
    cout << endl;

    return 0;
}
